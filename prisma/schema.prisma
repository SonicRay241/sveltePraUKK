// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique

  name     String
  username String @unique
  telepon  String
  level    Level  @default(MASYARAKAT)
  nik      String @unique

  session   Session[]
  key       Key[]
  Pengaduan Pengaduan[]
  Tanggapan Tanggapan[]

  @@map("user")
}

enum Level {
  ADMIN
  PETUGAS
  MASYARAKAT
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("session")
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  primary         Boolean
  user            User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("key")
}

model Pengaduan {
  id             Int        @id @default(autoincrement())
  titlePengaduan String
  tglPengaduan   DateTime
  isiLaporan     String     @db.LongText
  foto           String     @db.LongText
  nik            String
  status         Status     @default(NULL)
  user           User       @relation(references: [id], fields: [user_id], onDelete: Cascade)
  user_id        String
  Tanggapan      Tanggapan?

  @@map("pengaduan")
}

model Tanggapan {
  id           Int       @id @unique
  idPengaduan  Int
  tglTanggapan DateTime
  tanggapan    String
  petugasId    String
  user         User      @relation(references: [id], fields: [petugasId])
  pengaduan    Pengaduan @relation(references: [id], fields: [id])

  @@map("tanggapan")
}

enum Status {
  NULL
  PROSES
  SELESAI
}
